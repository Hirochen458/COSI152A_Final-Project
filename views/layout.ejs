  <body>
    <header>
    <div class="containerBar">
      <nav class="navi">
        <a class="hover-underline-animation" href="/">Home</a>
        <a class="hover-underline-animation" href="/About">About</a>
        <a class="hover-underline-animation" href="/users" >Users</a>
        <a class="hover-underline-animation" href="/Jobs">Jobs</a>
        <a class="hover-underline-animation" href="/Events">Events</a>
        <a class="hover-underline-animation" href="/Contact">Contact</a>
        <a class="hover-underline-animation" href="/Chat">Chat</a>

        <% if (loggedIn) { %> 
            <a class="hover-underline-animation"><%- include('./events/_eventsModal') %></a>
        <%}%>

        <% if (loggedIn) { %> 
            <a class="hover-underline-animation" href="<%=`/users/${currentUser._id}`%>">Login as  <%= currentUser.name %></a>
            <a class="hover-underline-animation" href="/users/logout">Log out</a>
        <%} else {%>
            <a class="hover-underline-animation" href="/users/login">Log In</a>
        <% } %>
        <a class="hover-underline-animation" href="/users/new">Sign Up</a>
        
      </nav>
      <div class="search">
        <button><i class="fa fa-search"></i></button>
      </div>
    </div>
    <% if (loggedIn) { %> 
      <div style="display: none" id="apiToken"><%= currentUser.apiToken %></div>
    <%}%>
  </>
  <div class="flashes">
    <% if (flashMessages) { %> <% if (flashMessages.success) { %>
    <div class="flash success"><%= flashMessages.success %></div>
    <%} else if (flashMessages.error){ %>
    <div class="flash error"><%= flashMessages.error %></div>
    <%} %> <%} %>
  </div>
  <%-body%>
